<div class="container container-fluid">
  <div class="page-header">
    <%= link_to 'New Task', new_task_path, class:"btn btn-info pull-right" %>
    <h1>Tasks</h1>
  </div>


  <table class="table">
    <thead>
      <tr>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody >
      <% @tasks.each do |task| %>
        <tr>
          <td class="table-spacing"><%= task.description %></td>
          <td class="table-spacing"><%= link_to 'Show', task, class: "btn btn-default" %></td>
          <td class="table-spacing"><%= link_to 'Edit', edit_task_path(task), class: "btn btn-default" %></td>
          <td class="table-spacing"><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
