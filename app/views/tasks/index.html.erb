<div class="container container-fluid">
  <div class="page-header">
    <div class="pull-right">
      <% if params[:complete] %>
        <%= link_to 'All', tasks_path, id: "show-all-tasks-path" %> | <%= 'Incomplete' %>
      <% else %>
        <%= 'All'%> | <%= link_to 'Incomplete', tasks_path(:complete => false), id:"show-incomplete-tasks-action" %>
      <% end %>
      <%= link_to 'New Task', new_task_path, id: "new-task-action", class:"btn btn-info" %>
    </div>
    <h1>Tasks</h1>
  </div>


  <table class="table">
    <thead>
      <tr>
        <th><%= link_to 'Task Description', tasks_path(filter_params({order_by_desc: true})), id: "sort-by-description-action"%></th>
        <th><%= link_to 'Completed?', tasks_path(filter_params({complete: true})), id: "sort-by-completion-action" %></th>
        <th><%= link_to 'Due Date', tasks_path(filter_params({order_by_due_date: true})), id: "sort-by-due-date-action" %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody >
      <% @tasks.each do |task| %>
        <% if (@today..(@today+7)).cover?(task.due_date) == true %>
          <tr bgcolor="EE9999">
            <td ><%= task.description %></td>
            <td ><%= task.complete %></td>
            <td ><%= task.due_date %></td>
            <td class ="pull-right"><%= link_to 'Show', task, class: "btn btn-success" %> <%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary" %> <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% else %>
          <tr>
            <td ><%= task.description %></td>
            <td ><%= task.complete %></td>
            <td ><%= task.due_date %></td>
            <td class ="pull-right"><%= link_to 'Show', task, class: "btn btn-success", id:"show-task-#{task.id}-action" %> <%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary" %> <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
