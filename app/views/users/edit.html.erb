<div class="page-header">
  <h1>Edit User</h1>
</div>

<%= form_for(@user, html: {class:"form-horizontal"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger col-md-offset-2">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved: </h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-md-2 control-label" %>
    <div class="col-md-3">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2 control-label" %>
    <div class="col-md-3">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class:"col-md-2 control-label" %>
    <div class="col-md-3">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <div class = "col-md-offset-2 col-md-6">
      <%= f. submit class:"btn btn-info" %>
      <%= link_to "Cancel", :back, class: "btn btn-default" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-3">
      <div class="well">
        <%= link_to "Delete User", user_path(@user), method: :delete, data: {confirm: "are you sure?"}, class: "btn btn-danger center-block" %>
      </div>
    </div>
  </div>

<% end %>
