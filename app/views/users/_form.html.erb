<%= form_for(@user, html: {class:"form-horizontal"}) do |f| %>

  <%= render 'shared/errors', object: @user %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-md-2 control-label" %>
    <div class="col-md-3">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2 control-label" %>
    <div class="col-md-3">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class:"col-md-2 control-label" %>
    <div class="col-md-3">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <div class = "col-md-offset-2 col-md-6">
      <%= f. submit class:"btn btn-info", id:"submit-action" %>
      <%= link_to "Cancel", :back, class: "btn btn-default" %>
    </div>
  </div>

  <% if @user.persisted? %>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-3">
        <div class="well text-center">
          <%= link_to "Delete", user_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>

<% end %>
