<!DOCTYPE html>
<html>
<head>
  <title>GCamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">gCamp</a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to "#{current_user.first_name} ""#{current_user.last_name}", user_path(current_user.id) %></li>
          <li><%= link_to "Sign Out", signout_path, id:"signout-action" %></li>
        <% else %>
          <li><%= link_to "Sign In", signin_path, id: "signin-action" %></li>
          <li><%= link_to "Sign Up", signup_path, id: "signup-action" %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <% if notice %>
    <div class="container alert alert-success">
      <p id="notice" class="text-center"><%= notice %></p>
    </div>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>

  <hr>
  <footer class="container">
    <%= link_to "About", about_path %> | <%= link_to "Terms", terms_path %> | <%= link_to "FAQ", faq_path%> | <%= link_to "Tasks", tasks_path %> | <%= link_to "Users", users_path %> | <%= link_to "Projects", projects_path %>
  </footer>
</body>
</html>
