
  <div class="jumbotron">
    <h1>gCamp</h1>
    <p>Your life, organized.</p>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= image_tag "image_1.jpg", class: "img-responsive" %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Tasks</h3>
        </div>
        <div class="panel-body">
          Grouped by projects and lists. Just the way you like'em.
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <%= image_tag "image_2.jpg", class:"img-responsive" %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Documents</h3>
        </div>
        <div class="panel-body">
          <ul>
            <li>Upload</li>
            <li>Comment</li>
            <li>Revise</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <%= image_tag "image_3.jpg", class: "img-responsive" %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Documents</h3>
        </div>
        <div class="panel-body">
          <ul>
            <li>Comment on tasks and documents</li>
            <li>Get email notifications</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container container-fluid">
    <% @quotes.each do |authorquote|%>
      <p><b><%= "\"#{authorquote[1]}\"" %></b></p>
      <footer><em><%= "-#{authorquote[0]}" %></em></footer><br>
    <% end %>
  </div>
